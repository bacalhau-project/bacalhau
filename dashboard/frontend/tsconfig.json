{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "lib",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}