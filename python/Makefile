export EARTHLY ?= $(shell command -v earthly 2> /dev/null)
export POETRY ?= $(shell command -v poetry 2> /dev/null)
export PYPI_VERSION ?= $(shell command -v git describe --tags --dirty 2> /dev/null)

sources = bacalhau_sdk

.PHONY: all
all: publish

.PHONY: setup
setup:
	$(EARTHLY) --push +install-deps
	$(EARTHLY) --push +install-precommit
	$(EARTHLY) --push +check-python-version-is-same-as-in-pyproject
	$(EARTHLY) --push +copy-code

.PHONY: test
test: unittest coverage

.PHONY: ruff
ruff:
	$(EARTHLY) --push +run-linter

.PHONY: unittest
unittest:
	$(EARTHLY) --push +run-unittest

.PHONY: coverage
coverage:
	$(EARTHLY) --push +run-coverage

.PHONY: install-pre-commit
install-pre-commit:
	$(POETRY) run pre-commit install
	@echo "Pre-commit installed."

.PHONY: pre-commit
pre-commit: install-pre-commit
	$(POETRY) run pre-commit run --files ./**/*

.PHONY: clean
clean:
	rm -rf .mypy_cache .pytest_cache
	rm -rf *.egg-info
	rm -rf .tox dist site
	rm -rf coverage.xml .coverage

.PHONY: build
build:
	# Echo PYPI_VERSION to .arg file
	echo "PYPI_VERSION=$(PYPI_VERSION)" > .arg

	# Get PYPI_TOKEN from environment or .env file and push to .secrets file
	python get_pypi_token.py

	$(EARTHLY) --push +build

.SILENT: publish
.PHONY: publish
publish:
	$(EARTHLY) --push +publish
