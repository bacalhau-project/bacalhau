{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "src",
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "babel.config.js",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "node_modules/**/*.ts"
  ]
}