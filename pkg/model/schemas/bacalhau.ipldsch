type Resource union {
    | IPFS "ipfs"
    | HTTP "http"
} representation stringprefix

type IPFS string
type HTTP string

type DockerInputs struct {
    entrypoint [String]
    workdir String
    mounts {String:Resource}
    outputs {String:nullable Any}
    env {String:String}
}

type WasmInputs struct {
    entrypoint String
    parameters [String]
    modules [Resource]
    mounts {String:Resource}
    outputs {String:nullable Any}
    env {String:String}
}

type BacalhauConfig struct {
    publisher Publisher
    timeout Duration
    resources ResourceSpec
    annotations [String]
    dnt Bool
}

type Publisher enum {
    | noop ("1")
    | ipfs ("2")
    | estuary ("3")
} representation int

type ResourceSpec struct {
    cpu Millicores
    disk ByteSize
    memory ByteSize
    gpu Int
}

type Duration int

type ByteSize int

type Millicores int
